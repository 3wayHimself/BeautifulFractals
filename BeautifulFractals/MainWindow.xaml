<Window x:Class="TAlex.BeautifulFractals.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="350" Width="525" ShowInTaskbar="False" Topmost="True" WindowStyle="None" WindowState="Maximized" Loaded="Window_Loaded">    
    <Grid>
        <TextBlock Name="captionTextBlock" FontSize="12" VerticalAlignment="Bottom" HorizontalAlignment="Center" Foreground="White" Margin="0,0,0,20">
            <TextBlock.Effect>
                <DropShadowEffect Color="Black" BlurRadius="1" ShadowDepth="1"  Direction="90" />
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</Window>
